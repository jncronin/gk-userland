{
    "cmake.configureSettings": {
        "CMAKE_TOOLCHAIN_FILE": "${workspaceFolder}/../toolchain-gkos.cmake",
        "UNIX": "ON",
        "SDL_LIBC": "ON",
        "SDL_PTHREADS": "ON",
        "SDL_THREADS": "ON",
        "SDL_OPENGL": "OFF",
        "SDL_OPENGLES": "OFF"
    },
    "cmake.environment": {
        "SYSROOT": "${env:HOME}/opt/gk",
        "PATH": "${env:HOME}/opt/gk-build/bin:${env:PATH}"
    },
    "files.associations": {
        "sdl_video.h": "c",
        "_gk_gpu.h": "c",
        "gk.h": "c",
        "zbuffer.h": "c",
        "_gk_event.h": "c",
        "sdl_keyboard_c.h": "c"
    },
}
